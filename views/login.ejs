<!DOCTYPE html>
<html>
<head>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
  <script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>
  <script>
    // use ajax to catch click then send post to backend
    $(document).ready(function(){
    $('#submitbtn').click(function(){
      alert('button clicked')
      var data = { username : $('input[name=username]').val(), password: $('input[name=password]').val()}; 
      console.log(data)
      $.ajax({
        type:'post',
        data:data,
        url:'/login',
        error:function(){
          console.log("this is dataXXXXXXXXXX");
        },
        success:function(response){
          console.log("click successXXXXXXXXX")

        }
      })
    })
  })

  </script>

</head>
<body>
  <div class="container">
    <form method="post"><!--action="/login"-->
      <div class="form-group">
        <label for="username">帳號</label>
        <input name="username" class="form-control" id="username" placeholder="username">
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">密碼</label>
        <input name="password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
      </div>
      <button type="submit" class="btnbtn-default" id="submitbtn">送出</button>
    </form>
  </div>
</body>
</html>